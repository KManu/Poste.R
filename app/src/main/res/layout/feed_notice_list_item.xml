<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PostCard_RelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/flat_button"
    android:padding="3dp">

    <TextView
        android:id="@+id/PostCard_PostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PostCard_Subject"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:maxLines="1"
        android:padding="3dp"
        android:text="10:50"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/PostCard_Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PostCard_Poster"
        android:layout_alignTop="@+id/PostCard_TypeImage"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:padding="2dp"
        android:text="The Cake is a Lie.Because it's not nice and we want fufu instead"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/PostCard_PostTime"
        android:layout_toLeftOf="@+id/PostCard_PostTime"
        android:layout_above="@+id/PostCard_Poster"
        android:layout_alignRight="@+id/PostCard_PostTime"
        android:layout_alignEnd="@+id/PostCard_PostTime" />

    <TextView
        android:id="@+id/PostCard_Poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PostCard_TypeImage"
        android:layout_toRightOf="@+id/PostCard_TypeImage"
        android:lines="1"
        android:maxLines="1"
        android:padding="3dp"
        android:text="GlaDos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/PostCard_TypeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:src="@drawable/polaroid" />

</RelativeLayout>
