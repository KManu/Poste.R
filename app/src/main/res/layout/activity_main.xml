<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main_frameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/Main_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/pattern_polaroid"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.migh.poster.Activities.MainActivity">


        <Button
            android:id="@+id/Main_manageFeedButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Manage Feeds"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_feeds_button"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/Main_manageEventsButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Manage Events"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_event_note_black_36dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/Main_createFeedButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Create Feed"
            android:drawableLeft="@drawable/ic_my_library_add_black_36dp"
            android:textSize="18sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Main_createFeedButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>