<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.migh.poster.Activities.CreateFeedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/CreateFeed_RelativeLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CreateFeed_FeedNameLabel"
            android:text="Feed Name"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CreateFeed_DescriptionLabel"
            android:layout_below="@+id/CreateFeed_FeedNameLabel"
            android:text="Feed Description"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CreateFeed_FeedNameField"
            android:layout_toRightOf="@+id/CreateFeed_FeedNameLabel"/>



    </RelativeLayout>



</ScrollView>
